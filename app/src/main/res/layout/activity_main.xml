<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:id="@+id/smeier"
            android:layout_width="113dp"
            android:layout_height="59dp"
            android:text="@string/sid_meier"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.873"
            app:layout_constraintVertical_bias="0.168"

    />

    <ImageView
            android:layout_width="174dp"
            android:layout_height="181dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.139"
            app:layout_constraintVertical_bias="0.063"
            android:src="@drawable/smeier" android:layout_marginTop="16dp"/>

    <Button
            android:id="@+id/thoward"
            android:layout_width="127dp"
            android:layout_height="64dp"
            android:text="@string/todd_howard"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.904"
            app:layout_constraintVertical_bias="0.521"/>
    <ImageView
            android:layout_width="174dp"
            android:layout_height="181dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.139"
            android:src="@drawable/thoward" android:layout_marginTop="16dp"

    />
    <Button
            android:id="@+id/jromero"
            android:layout_width="138dp"
            android:layout_height="68dp"
            android:text="@string/john_romero"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginBottom="80dp"
            app:layout_constraintHorizontal_bias="0.901"/>
    <ImageView
            android:layout_width="181dp"
            android:layout_height="224dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" android:layout_marginBottom="16dp"
            app:layout_constraintHorizontal_bias="0.113"
            android:src="@drawable/jromero" android:layout_marginTop="16dp"/>


</android.support.constraint.ConstraintLayout>